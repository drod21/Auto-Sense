{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["mobile/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "App.tsx",
    "mobile/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "client",
    "server"
  ]
}
